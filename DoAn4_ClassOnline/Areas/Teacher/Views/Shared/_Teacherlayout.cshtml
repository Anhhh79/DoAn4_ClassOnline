<!-- ⭐ KHỞI TẠO FLATPICKR ⭐ -->
<script>
	document.addEventListener('DOMContentLoaded', function() {
		const dobInput = document.getElementById('dob_GiaoVien');
		
		if (dobInput) {
			flatpickr(dobInput, {
				dateFormat: "d/m/Y",        // Định dạng dd/mm/yyyy
				maxDate: "today",           // Không cho chọn ngày tương lai
				locale: "vn",               // Tiếng Việt
				allowInput: true,           // Cho phép nhập tay
				altInput: true,             // Hiển thị định dạng đẹp hơn
				altFormat: "d/m/Y",
				disableMobile: false        // Bật mobile-friendly picker
			});
			
			console.log('✅ Flatpickr đã được khởi tạo thành công!');
		} else {
			console.warn('⚠️ Không tìm thấy input #dob_GiaoVien');
		}
	});
</script>

