@{
    ViewData["Title"] = "Thêm bài trắc nghiệm";
    var khoaHocId = ViewBag.KhoaHocId ?? 0;
}

<div class="container mt-4">
    <div class="d-flex align-items-center mb-4">
        <!-- Nút quay lại -->
        <a class="btn border-0" href="javascript:history.back()">
            <i class="bi bi-chevron-left"></i> Quay lại
        </a>
        <h4 class="fw-bold mb-0 ms-auto me-auto">Tạo đề mới</h4>
    </div>

    <div class="row g-4">
        <!-- LEFT UPLOAD AREA -->
        <div class="col-md-8">
            <div class="border rounded-4 bg-white text-center p-5 shadow-sm" id="uploadArea">
                <div class="mb-3">
                    <i class="bi bi-cloud-arrow-up fs-1 text-primary"></i>
                </div>

                <h5 class="fw-semibold mb-3">Chọn File Word hoặc kéo thả vào đây</h5>

                <p class="text-muted small">
                    Hỗ trợ: <strong>.doc, .docx</strong> (Microsoft Word)<br>
                    File Word cần có định dạng chuẩn để hệ thống tự động đọc câu hỏi
                </p>

                <!-- ⭐ CẬP NHẬT: accept chỉ .doc, .docx ⭐ -->
                <input type="file" id="fileInput" accept=".doc,.docx" hidden />
                <button class="btn btn-primary px-4 rounded-3" id="selectFileBtn">
                    <i class="bi bi-file-earmark-word me-2"></i>Chọn file Word
                </button>

                <p class="small mt-3 text-muted">
                    <i class="bi bi-question-circle"></i> 
                    <a href="#" class="text-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Xem mẫu file Word
                    </a>
                </p>
            </div>

            <div class="alert alert-info border-0 d-flex align-items-center mt-3 rounded-4">
                <i class="bi bi-info-circle fs-5 me-2"></i>
                <div>
                    <strong>Hướng dẫn:</strong> File Word cần tuân thủ định dạng để tự động đọc được câu hỏi và đáp án.
                    <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal" class="text-decoration-underline">
                        Xem ví dụ
                    </a>
                </div>
            </div>
        </div>

        <!-- RIGHT FEATURE MENU -->
        <div class="col-md-4">
            <div class="bg-white border rounded-4 shadow-sm">
                <div class="p-4 border-bottom">
                    <h6 class="fw-bold mb-3">Online</h6>

                    <!-- ⭐ TRUYỀN khoaHocId VÀO LINK ⭐ -->
                    <a asp-action="ChinhSuaTracNghiem" 
                       asp-controller="TracNghiem" 
                       asp-area="Teacher" 
                       asp-route-khoaHocId="@khoaHocId" 
                       class="text-decoration-none">
                        <div class="p-3 border rounded-3 hover-box mb-3" style="cursor:pointer;">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-pencil-square fs-4 text-primary me-3"></i>
                                <div>
                                    <strong>Tự soạn Đề thi / Bài tập</strong>
                                    <p class="small text-muted mb-0">Nhập câu hỏi trực tiếp trên hệ thống</p>
                                </div>
                            </div>
                        </div>
                    </a>

                    <div class="p-3 border rounded-3 hover-box mb-3" style="cursor:pointer;">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-controller fs-4 text-primary me-3"></i>
                            <div>
                                <strong>Tạo đề tương tác <span class="badge bg-danger">Mới</span></strong>
                                <p class="small text-muted mb-0">Trò chơi học tập trực tuyến</p>
                            </div>
                        </div>
                    </div>

                    <div class="p-3 border rounded-3 hover-box mb-3" style="cursor:pointer;">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-kanban fs-4 text-primary me-3"></i>
                            <div>
                                <strong>Đề đánh giá năng lực</strong>
                                <p class="small text-muted mb-0">Tạo nhiều bộ đề theo mức độ</p>
                            </div>
                        </div>
                    </div>

                    <div class="p-3 border rounded-3 hover-box" style="cursor:pointer;">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-grid fs-4 text-primary me-3"></i>
                            <div>
                                <strong>Tạo đề từ Ma trận</strong>
                                <p class="small text-muted mb-0">Sinh đề tự động theo chương</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden input để JavaScript có thể lấy khoaHocId nếu cần -->
<input type="hidden" id="khoaHocId" value="@khoaHocId" />

<style>
    .hover-box:hover {
        background-color: #f8f9fa;
        border-color: #0d6efd;
        transition: .2s;
    }
    
    /* ⭐ STYLE CHO DRAG & DROP ⭐ */
    #uploadArea.dragover {
        background-color: #e7f3ff;
        border: 2px dashed #0d6efd !important;
        transform: scale(1.02);
        transition: all 0.3s;
    }
</style>

<!-- ⭐ THÊM SWEETALERT2 (NẾU CHƯA CÓ) ⭐ -->
@if (!ViewContext.HttpContext.Request.Path.Value.Contains("_Layout"))
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}

<!-- ⭐ THÊM SCRIPT MỚI ⭐ -->
<script src="~/assets/js/teacher/WordImport.js"></script>

<script>
    // Truyền khoaHocId cho JavaScript (nếu cần)
    window.khoaHocIdGlobal = @khoaHocId;
    console.log('✅ Khóa học ID:', window.khoaHocIdGlobal);
</script>
