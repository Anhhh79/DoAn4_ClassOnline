<div class="container py-5">
    <div class="border rounded-4 bg-white shadow-sm p-5 text-center"
         style="border: 1px solid #dce3ed;">

        <!-- ICON UPLOAD -->
        <div class="mb-3">
            <i class="bi bi-cloud-arrow-up text-primary" style="font-size: 3rem;"></i>
        </div>

        <!-- TIÊU ĐỀ -->
        <h5 class="fw-semibold mb-3">Chọn File hoặc kéo thả File vào đây</h5>

        <!-- MÔ TẢ -->
        <p class="text-muted small mb-4">
            Hỗ trợ: <strong>.pdf, .doc, .docx, .xlsx, .azt, .tex, .zip, hình ảnh</strong><br>
            Có thể Upload File <strong>Bài tập</strong>, <strong>Đề thi</strong> hoặc
            <strong>Bảng đáp án</strong> để chấm offline
        </p>

        <!-- NÚT CHỌN FILE -->
        <input type="file" id="fileInput" hidden onchange="showFileName(event)" />
        <button class="btn btn-warning text-white px-4 rounded-3 shadow-sm fw-semibold"
                onclick="document.getElementById('fileInput').click();">
            <i class="bi bi-upload me-1"></i> Chọn file
        </button>

        <!-- TÊN FILE -->
        <div id="fileNameDisplay" class="mt-3 text-secondary small"></div>

        <!-- GỢI Ý -->
        <div class="mt-4">
            <a href="#" class="text-decoration-none small text-muted me-2">
                <i class="bi bi-file-earmark-pdf"></i> Đề mẫu PDF
            </a> |
            <a href="#" class="text-decoration-none small text-muted mx-2">
                <i class="bi bi-file-earmark-word"></i> Đề mẫu Word
            </a> |
            <a href="#" class="text-decoration-none small text-muted ms-2">
                <i class="bi bi-file-earmark-excel"></i> Excel đáp án offline
            </a>
        </div>
    </div>
</div>

<!-- JS: Hiển thị tên file -->
<script>
    function showFileName(event) {
        const file = event.target.files[0];
        const display = document.getElementById("fileNameDisplay");
        if (file) {
            display.innerHTML = `<i class="bi bi-check-circle-fill text-success me-1"></i>
                                 Đã chọn: <strong>${file.name}</strong>`;
        } else {
            display.textContent = "";
        }
    }
</script>
