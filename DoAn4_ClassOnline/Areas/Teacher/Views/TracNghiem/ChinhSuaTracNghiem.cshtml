<!-- BẮT ĐẦU: phần chèn trong div.row ... -->
<!-- Header + controls -->
<!-- Thay thế phần header cũ bằng khối này -->
<div class="position-relative d-flex align-items-center mb-3" style="min-height:48px;">
    <!-- Nút Quay lại (bên trái) -->
    <a class="btn border-0" href="javascript:history.back()">
        <i class="bi bi-chevron-left me-1"></i> Quay lại
    </a>

    <!-- Tiêu đề căn giữa (sử dụng vị trí tuyệt đối để luôn nằm giữa) -->
    <h5 class="fw-bold mb-0 text-center"
        style="position:absolute; left:50%; transform:translateX(-50%); pointer-events:none; z-index:1;">
        Tạo / Chỉnh sửa bài thi
    </h5>

    <!-- Nhóm nút ở bên phải -->
    <div class="btn-group ms-auto">
        <button id="btnAdd" type="button" class="btn btn-success btn-sm">+ Thêm câu hỏi</button>
        <button id="btnPreview" type="button" class="btn btn-outline-secondary btn-sm">Xem trước</button>
        <button id="btnExport" type="button" class="btn btn-outline-primary btn-sm">Xuất Word</button>
        <button id="btnImport" type="button" class="btn btn-outline-warning btn-sm">Nhập Word</button>
    </div>
</div>

<!-- Form chứa câu hỏi -->
<form id="testForm" class="w-100">
    <div id="questionContainer"></div>

    <div class="d-flex justify-content-end mt-3">
        <button id="btnSave" type="submit" class="btn btn-primary">Lưu bài thi</button>
    </div>
</form>

<!-- Input file ẩn dùng để import JSON -->
<input type="file" id="fileImport" accept="application/json" style="display:none" />

<!-- Modal xem trước (bootstrap modal structure - nếu bạn đã load bootstrap js thì modal hoạt động) -->
<div class="modal fade" id="previewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xem trước bài thi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="previewBody" style="min-height:200px"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

