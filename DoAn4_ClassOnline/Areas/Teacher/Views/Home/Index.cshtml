@model IEnumerable<DoAn4_ClassOnline.Models.KhoaHoc>

@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container">
    <!-- Tiêu đề -->
    <div class="text-center mb-5">
        <h2 class="fw-bold mb-2">Các khóa học</h2>
        
        <!-- Dropdown chọn học kỳ -->
        <div class="d-flex justify-content-center">
            <select id="selectHocKy" class="form-select w-auto rounded-pill shadow-sm fw-semibold">
                <option value="0">-- Đang tải... --</option>
            </select>
        </div>

        <!-- Card Khóa học -->
        <div class="row g-4 mt-2" id="khoaHocContainer">
            <!-- Loading spinner -->
            <div class="col-12 text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Đang tải...</span>
                </div>
                <p class="mt-2 text-muted">Đang tải dữ liệu...</p>
            </div>
        </div>
    </div>
</div>
