<div class="row g-3 mt-4 p-3 shadow rounded-4 bg-white">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="fw-bold mb-0">
            <i class="bi bi-file-earmark-text me-2 text-primary"></i> Tài liệu học tập
        </h5>
        <button type="button" class="btn btn-success btn-sm text-light" data-bs-toggle="modal" data-bs-target="#addTaiLieuModal" onclick="resetAddTaiLieuForm();">
            <i class="bi bi-plus-lg me-1"></i> Thêm tài liệu
        </button>
    </div>

    <!-- Modal thêm tài liệu -->
    <div class="modal fade" id="addTaiLieuModal" tabindex="-1" aria-labelledby="addTaiLieuModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <form id="formAddTaiLieu" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold" id="addTaiLieuModalLabel">
                            <i class="bi bi-file-earmark-plus me-2 text-primary"></i> Thêm tài liệu học tập
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                    </div>

                    <div class="modal-body">
                        <div class="row g-3 px-3">
                            <div class="col-12">
                                <label class="form-label">Tên tài liệu</label>
                                <input type="text" class="form-control" name="TenTaiLieu" id="tenTaiLieu_Add" required />
                                <div class="invalid-feedback">Vui lòng nhập tên tài liệu!</div>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Mô tả</label>
                                <textarea class="form-control" name="MoTa" id="moTa_Add" rows="4" required></textarea>
                                <div class="invalid-feedback">Vui lòng nhập mô tả tài liệu!</div>
                            </div>
                            <input type="number" class="form-control" name="ThuTu" id="thuTu_Add" value="1" hidden />

                            <div class="col-12">
                                <label class="form-label">Tệp đính kèm</label>
                                <input type="file" class="form-control" name="Files" id="files_Add" multiple required />
                                <div class="form-text small text-muted">
                                    Cho phép nhiều file (.pdf, .docx, .xlsx, .jpg, ...)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="button" class="btn btn-primary text-light" onclick="createTaiLieu()">
                            <i class="bi bi-save me-1"></i> Lưu tài liệu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="taiLieuContainer" class="row">
        <!-- Danh sách tài liệu sẽ được hiển thị ở đây -->
    </div>


    <!-- Modal Sửa tài liệu -->
    <div class="modal fade" id="editTaiLieuModal" tabindex="-1" aria-labelledby="editTaiLieuModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <form asp-controller="TaiLieu" asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold" id="editTaiLieuModalLabel">
                            <i class="bi bi-pencil-square me-2 text-primary"></i> Sửa tài liệu
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                    </div>

                    <div class="modal-body">
                        <div class="row g-3 px-3">
                            <!-- ID ẩn -->
                            <input type="hidden" id="editTaiLieuId" name="Id" />

                            <!-- Tên tài liệu -->
                            <div class="col-12">
                                <label class="form-label">Tên tài liệu</label>
                                <input type="text" id="editTenTaiLieu" name="TenTaiLieu" class="form-control" required />
                                <div class="invalid-feedback">Vui lòng nhập tên tài liệu!</div>
                            </div>

                            <!-- Mô tả -->
                            <div class="col-12">
                                <label class="form-label">Mô tả</label>
                                <textarea id="editMoTa" name="MoTa" class="form-control" rows="4" required></textarea>
                                <div class="invalid-feedback">Vui lòng nhập mô tả!</div>
                            </div>

                            <!-- File hiện có -->
                            <div class="col-12">
                                <label class="form-label text-muted">Tệp hiện tại:</label>
                                <div id="currentFilesContainer" class="border rounded-3 p-2 bg-light small">
                                    <!-- Ví dụ: dữ liệu động được render bằng JS hoặc Razor -->
                                    <div class="d-flex justify-content-between align-items-center border rounded-2 p-2 mb-1 bg-white">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-file-earmark-pdf text-danger fs-5 me-2"></i>
                                            <a href="/uploads/TaiLieu_IoT.pdf" target="_blank" class="text-decoration-none text-dark">
                                                Tài liệu IoT.pdf
                                            </a>
                                        </div>
                                        <button type="button" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center border rounded-2 p-2 mb-1 bg-white">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-file-earmark-word text-primary fs-5 me-2"></i>
                                            <a href="/uploads/TaiLieu_HuongDan.docx" target="_blank" class="text-decoration-none text-dark">
                                                Hướng dẫn.docx
                                            </a>
                                        </div>
                                        <button type="button" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center border rounded-2 p-2 mb-1 bg-white">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-file-earmark-excel text-success fs-5 me-2"></i>
                                            <a href="/uploads/DuLieu_CamBien.xlsx" target="_blank" class="text-decoration-none text-dark">
                                                Dữ liệu cảm biến.xlsx
                                            </a>
                                        </div>
                                        <button type="button" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Upload file mới -->
                            <div class="col-12">
                                <label class="form-label mt-2">Thêm hoặc thay file mới (tùy chọn)</label>
                                <input type="file" class="form-control" name="Files" multiple />
                                <div class="form-text small">Nếu không chọn, hệ thống sẽ giữ nguyên các file hiện có.</div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary text-light">
                            <i class="bi bi-save me-1"></i> Cập nhật
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
