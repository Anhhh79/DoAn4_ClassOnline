<div class="row g-3 mt-4 p-3 shadow rounded-4 bg-white">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="fw-bold mb-3">
            <i class="bi bi-ui-checks-grid me-2 text-primary"></i> Quản lý bài trắc nghiệm
        </h5>

        <button type="button" class="btn btn-success btn-sm text-light" data-bs-toggle="modal" data-bs-target="#addTracNghiemModal">
            <i class="bi bi-plus-lg me-1"></i> Tạo bài trắc nghiệm
        </button>
    </div>

    <!-- Modal tạo trắc nghiệm -->
    <div class="modal fade" id="addTracNghiemModal" tabindex="-1" aria-labelledby="addTracNghiemModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <form asp-controller="TracNghiem" asp-action="Create" method="post" class="needs-validation" novalidate>
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold" id="addTracNghiemModalLabel">
                            <i class="bi bi-file-earmark-plus me-2 text-primary"></i> Tạo bài trắc nghiệm
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <div class="row g-3 px-3">
                            <div class="col-12">
                                <label class="form-label">Tên bài trắc nghiệm</label>
                                <input type="text" class="form-control" required maxlength="200">
                            </div>

                            <div class="col-6">
                                <label class="form-label">Thời gian làm bài (phút)</label>
                                <input type="number" class="form-control" min="1" required>
                            </div>

                            <div class="col-6">
                                <label class="form-label">Hạn nộp</label>
                                <input type="datetime-local" class="form-control" required>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Mô tả</label>
                                <textarea class="form-control" rows="3" required></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary text-light">
                            <i class="bi bi-save me-1"></i> Lưu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!-- ====== BÀI TRẮC NGHIỆM 1 ====== -->
    <div class="col-12">
        <div class="border rounded-3 p-3 mb-2 bg-body-tertiary d-flex justify-content-between align-items-center flex-wrap gap-2">

            <!-- Tên bài -->
            <a class="text-decoration-none text-dark d-flex align-items-center flex-grow-1"
               data-bs-toggle="collapse"
               href="#collapseTN1"
               role="button">
                <strong class="me-1">Bài 1:</strong> Trắc nghiệm IoT cơ bản
            </a>

            <!-- Hạn nộp -->
            <div class="text-muted small d-flex align-items-center me-4">
                <i class="bi bi-clock me-1"></i> Hạn: 12/11/2025 - 23:59
            </div>

            <!-- Nút hành động -->
            <div>
                <button class="btn btn-outline-secondary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#editTracNghiemModal">
                    <i class="bi bi-pencil"></i> Sửa
                </button>
                <button class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash"></i> Xóa
                </button>
            </div>
        </div>

        <!-- Nội dung -->
        <div class="collapse" id="collapseTN1">
            <div class="p-3 border rounded-3 mb-3" style="background-color: #f3f6f8;">
                <p class="mb-1"><strong>Thời gian làm bài:</strong> 20 phút</p>
                <p class="mb-1"><strong>Mô tả:</strong> Kiến thức IoT chương 1 - cơ bản</p>
                <hr class="my-2">

                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-primary"><i class="bi bi-list-check me-1"></i>Danh sách câu hỏi</button>
                    <button class="btn btn-sm btn-outline-success"><i class="bi bi-bar-chart me-1"></i>Bảng điểm</button>
                </div>
            </div>
        </div>
    </div>


    <!-- ====== BÀI TRẮC NGHIỆM 2 ====== -->
    <div class="col-12">
        <div class="border rounded-3 p-3 mb-2 bg-body-tertiary d-flex justify-content-between align-items-center flex-wrap gap-2">
            <a class="text-decoration-none text-dark d-flex align-items-center flex-grow-1"
               data-bs-toggle="collapse"
               href="#collapseTN2">
                <strong class="me-1">Bài 2:</strong> Trắc nghiệm cảm biến IoT
            </a>

            <div class="text-muted small d-flex align-items-center me-4">
                <i class="bi bi-clock me-1"></i> Hạn: 20/11/2025 - 22:00
            </div>

            <div>
                <button class="btn btn-outline-secondary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#editTracNghiemModal">
                    <i class="bi bi-pencil"></i> Sửa
                </button>
                <button class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash"></i> Xóa
                </button>
            </div>
        </div>

        <div class="collapse" id="collapseTN2">
            <div class="p-3 border rounded-3 mb-3" style="background-color: #f3f6f8;">
                <p class="mb-1"><strong>Thời gian làm bài:</strong> 30 phút</p>
                <p class="mb-1"><strong>Mô tả:</strong> Hệ thống cảm biến trong IoT</p>

                <hr class="my-2">

                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-primary"><i class="bi bi-list-check me-1"></i>Danh sách câu hỏi</button>
                    <button class="btn btn-sm btn-outline-success"><i class="bi bi-bar-chart me-1"></i>Bảng điểm</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal chỉnh sửa trắc nghiệm -->
    <div class="modal fade" id="editTracNghiemModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <form asp-controller="TracNghiem" asp-action="Edit" class="needs-validation" novalidate>
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold">
                            <i class="bi bi-pencil-square me-2 text-primary"></i> Sửa bài trắc nghiệm
                        </h5>
                        <button class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <div class="row g-3 px-3">
                            <input type="hidden" id="editId" />

                            <div class="col-12">
                                <label class="form-label">Tên bài</label>
                                <input type="text" class="form-control" required />
                            </div>

                            <div class="col-6">
                                <label class="form-label">Thời gian làm bài (phút)</label>
                                <input type="number" min="1" class="form-control" required />
                            </div>

                            <div class="col-6">
                                <label class="form-label">Hạn nộp</label>
                                <input type="datetime-local" class="form-control" required />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Mô tả</label>
                                <textarea class="form-control" rows="3" required></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button class="btn btn-primary text-light">
                            <i class="bi bi-save me-1"></i> Cập nhật
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>

</div>
