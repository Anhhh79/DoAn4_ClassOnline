@{
    ViewData["Title"] = "Chi tiết khoa";

    var tenKhoa = ViewBag.TenKhoa as string;
    var khoaId = ViewBag.KhoaId ?? 0;
    var hocKyMoi = ViewBag.HocKyMoi as DoAn4_ClassOnline.Models.HocKy;
    var danhSachHocKy = ViewBag.DanhSachHocKy as List<DoAn4_ClassOnline.Models.HocKy> ?? new List<DoAn4_ClassOnline.Models.HocKy>();
}

<div class="container">
    <!-- Tiêu đề -->
    <div class="text-center mb-4">
        <div class="d-flex page-header justify-content-between align-items-center mb-2">
            <!-- Nút quay lại -->
            <a class="btn border-0" asp-controller="Home" asp-action="Index">
                <i class="bi bi-chevron-left"></i> Quay lại
            </a>
            <h3 class="fw-bold text-center mb-0 flex-grow-1">@tenKhoa</h3>
            <!-- Placeholder to balance -->
            <div style="width:96px;"></div>
        </div>

        <!-- ⭐ Dropdown chọn học kỳ -->
        <div class="d-flex justify-content-center mt-1">
            <select id="selectHocKy" class="form-select w-auto rounded-pill shadow-sm fw-semibold" data-khoa-id="@khoaId">
                <option value="0">-- Tất cả học kỳ --</option>
                @if (danhSachHocKy.Any())
                {
                    @foreach (var hk in danhSachHocKy)
                    {
                        var isSelected = hocKyMoi != null && hk.HocKyId == hocKyMoi.HocKyId;
                        <option value="@hk.HocKyId" selected="@isSelected">@hk.TenHocKy / @hk.NamHoc</option>
                    }
                }
                else
                {
                    <option value="0" disabled>Không có học kỳ nào</option>
                }
            </select>
        </div>
    </div>

    <!-- ⭐ Loading Spinner -->
    <div id="loadingSpinner" class="text-center my-5" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Đang tải...</span>
        </div>
        <p class="mt-2">Đang tải khóa học...</p>
    </div>

    <!-- ⭐ Danh sách khóa học -->
    <div id="danhSachKhoaHoc" class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Sẽ được load bằng AJAX -->
    </div>

    <!-- ⭐ Thông báo không có khóa học -->
    <div id="noDataMessage" class="alert alert-info text-center" style="display: none;">
        <i class="bi bi-info-circle me-2"></i>
        Chưa có khóa học nào trong học kỳ này.
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/student/chitietkhoa.js"></script>
}



