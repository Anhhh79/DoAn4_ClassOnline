@model List<DoAn4_ClassOnline.Models.User>

<div class="main" id="content">
    <nav class="navbar navbar-expand px-4 py-3">
        <div class="container-fluid">
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav justify-content-between w-100 flex-wrap">
                    <li>
                        <h2 class="fw-bold">Thông tin tài khoản</h2>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="content px-3 py-3">
        <div class="container-fluid">
            <div>
                <div class="row align-items-center justify-content-between mx-1 mb-4">
                    <!-- Ô tìm kiếm và chọn khoa nằm cùng hàng -->
                    <div class="col-12 col-md-8">
                        <form method="get" asp-action="Index" class="row g-2 align-items-center">
                            <!-- Ô tìm kiếm -->
                            <div class="col-12 col-md-5">
                                <div class="input-group align-items-center border border-dark rounded w-100">
                                    <i class="fa-solid fa-magnifying-glass fa-1x ms-2"></i>
                                    <input type="text" name="searchTerm" id="timKiemSan" class="form-control input-border border-0"
                                           placeholder="Thông tin tài khoản" value="@ViewContext.HttpContext.Request.Query["searchTerm"]">
                                </div>
                            </div>

                            <!-- Select chọn khoa -->
                            <div class="col-12 col-md-5">
                                <select class="form-select" name="khoaId" id="LoaiSan" style="border: solid 1px;">
                                    @* ⭐ THÊM LOGIC CHỌN "TẤT CẢ" ⭐ *@
                                    <option value="" selected="@(string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["khoaId"]) ? "selected" : null)">Tất cả</option>
                                    @foreach (var khoa in ViewBag.Khoas)
                                    {
                                        <option value="@khoa.KhoaId" selected="@(ViewContext.HttpContext.Request.Query["khoaId"] == khoa.KhoaId.ToString() ? "selected" : null)">
                                            @khoa.TenKhoa
                                        </option>
                                    }
                                </select>
                            </div>

                            <!-- Nút Tìm -->
                            <div class="col-12 col-md-2">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fa-solid fa-magnifying-glass me-1"></i> Tìm kiếm
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Nút thêm tài khoản -->
                    <div class="col-12 col-md-auto mt-2 mt-md-0">
                        <button type="button" class="btn btn-success w-100 w-md-auto"
                                data-bs-toggle="modal" data-bs-target="#them" data-bs-dismiss="modal">
                            Thêm tài khoản
                        </button>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table">
                                <thead style="background: #0e2238;">
                                    <tr>
                                        <th scope="col" style="width: 50px;">#</th>
                                        <th scope="col" style="width: 15%;">Họ và tên</th>
                                        <th scope="col" style="width: 22%;">Khoa</th>
                                        <th scope="col" style="width: 10%;">Chức vụ</th>
                                        <th scope="col" style="width: 23%;">Email</th>
                                        <th scope="col" style="width: 20%;"></th>
                                    </tr>
                                </thead>
                                <tbody id="sanBongTable">
                                    @if (Model != null && Model.Any())
                                    {
                                        int stt = 1;
                                        foreach (var user in Model)
                                        {
                                            var roleName = user.UserRoles.FirstOrDefault()?.Role?.RoleName ?? "Chưa có vai trò";
                                            var roleDisplay = roleName switch
                                            {
                                                "Teacher" => "Giảng viên",
                                                "Student" => "Sinh viên",
                                                "Admin" => "Quản trị viên",
                                                _ => roleName  // Giữ nguyên nếu không khớp
                                            };
                                            var isActive = user.IsActive ?? false;
                                            
                                            <tr data-user-id="@user.UserId">
                                                <th scope="row" style="text-align: center;">@stt</th>
                                                <td>@user.FullName</td>
                                                <td>@(user.Khoa?.TenKhoa ?? "Chưa có khoa")</td>
                                                <td>@roleDisplay</td>
                                                <td>@user.Email</td>
                                                <td>
                                                    <button class="btn btn-sm btn-primary btn-detail" data-user-id="@user.UserId" data-bs-toggle="modal" data-bs-target="#detailModal">
                                                        <i class="bi bi-eye"></i> Chi tiết
                                                    </button>
                                                    @* ⭐ ĐỔI VỊ TRÍ 2 NÚT ⭐ *@
                                                    @if (isActive)
                                                    {
                                                        <button class="btn btn-sm btn-danger btn-toggle-status me-2" data-user-id="@user.UserId">Khóa tài khoản</button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-success btn-toggle-status me-2" data-user-id="@user.UserId" style="padding-left:15px; padding-right:14px">Mở tài khoản</button>
                                                    }
                                                    
                                                </td>
                                            </tr>
                                            stt++;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center">Không có dữ liệu</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Modal thêm -->
    <div class="modal fade" id="them" tabindex="-1" aria-labelledby="them" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen-xl-down">
            <div class="modal-content" style="border-radius: 20px;">
                <div class="modal-header d-flex justify-content-center text-center">
                    <div>
                        <h5 style="font-weight: bolder;">Thêm tài khoản</h5>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <label for="tenSan" class="ms-1 mb-1 label-modal">Họ và Tên</label>
                                <input type="text" id="tenSan" class="form-control" placeholder="Nhập họ và tên">
                                <span id="errortenSan" class="text-danger"></span>
                            </div>
                            <div class="col-12 mt-3">
                                <label for="gia" class="ms-1 mb-1 label-modal">Email</label>
                                <input type="email" id="gia" class="form-control" placeholder="Nhập email">
                                <span id="errorGia" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <label class="mb-1 ms-1 label-modal">Khoa</label>
                                <select class="form-select" id="LoaiSan" required>
                                    <option value="">Chọn khoa</option>
                                    @foreach (var khoa in ViewBag.Khoas)
                                    {
                                        <option value="@khoa.KhoaId">@khoa.TenKhoa</option>
                                    }
                                </select>
                                <span class="error text-danger" id="ErrorLoaiSan"></span>
                            </div>
                        </div>
                    </div>
                    <div class="container my-2">
                        <div class="row" style="justify-content: flex-end;">
                            <div class="col-12 d-flex justify-content-end" style="width: 160px;">
                                <button type="button" id="btnThem" class="btn btn-success w-100 w-md-auto"
                                        style="font-size: small;" onclick="KiemTraLoi()">
                                    Thêm tài khoản
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Chi Tiết -->
    <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content rounded-4">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="detailModalLabel">Thông tin chi tiết</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body" id="modalBody">
                    <div class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>

                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- ⭐ TÁCH RA FILE JS RIÊNG ⭐ -->
    <script src="~/assets/js/Admin/QuanLyTaiKhoan.js"></script>
}
