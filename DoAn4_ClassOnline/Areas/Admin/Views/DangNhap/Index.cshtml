@{
    ViewData["Title"] = "Đăng nhập";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống quản lý lớp học</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #efefef;
            min-height: 100vh;
        }
        
        .otp-input {
            width: 50px;
            height: 55px;
            font-size: 1.5rem;
            font-weight: 600;
            border: 2px solid #dee2e6;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .otp-input:focus {
            border-color: rgb(20, 34, 56);
            box-shadow: 0 0 0 0.2rem rgba(20, 34, 56, 0.25);
            outline: none;
        }

        .otp-input:hover {
            border-color: #adb5bd;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-5">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-5">

                        <div class="text-center mb-4">
                            <i class="bi bi-mortarboard-fill text-primary" style="font-size: 3rem;"></i>
                            <h3 class="fw-bold mt-3">Đăng nhập</h3>
                            <p class="text-muted">Hệ thống quản lý lớp học</p>
                        </div>

                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Đăng nhập bằng Google -->
                        <div class="d-grid mb-4">
                            <a asp-area="Admin"
                               asp-controller="DangNhap"
                               asp-action="LoginWithGoogle"
                               asp-route-returnUrl="@returnUrl"
                               class="btn btn-outline-danger btn-lg rounded-3 d-flex align-items-center justify-content-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-google me-2" viewBox="0 0 16 16">
                                    <path d="M15.545 6.558a9.4 9.4 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.7 7.7 0 0 1 5.352 2.082l-2.284 2.284A4.35 4.35 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.8 4.8 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.7 3.7 0 0 0 1.599-2.431H8v-3.08z" />
                                </svg>
                                Đăng nhập bằng Google
                            </a>
                        </div>

                        <div class="position-relative text-center my-4">
                            <hr class="text-muted" />
                            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">
                                Hoặc
                            </span>
                        </div>

                        <!-- Form đăng nhập thông thường -->
                        <form asp-area="Admin" asp-controller="DangNhap" asp-action="Login" method="post">
                            <input type="hidden" name="returnUrl" value="@returnUrl" />

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Email</label>
                                <input type="email" name="email" class="form-control form-control-lg rounded-3" placeholder="example@email.com" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Mật khẩu</label>
                                <input type="password" name="password" class="form-control form-control-lg rounded-3" placeholder="••••••••" required />
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" />
                                    <label class="form-check-label" for="rememberMe">
                                        Ghi nhớ đăng nhập
                                    </label>
                                </div>
                                <a href="#" class="text-decoration-none small" data-bs-toggle="modal"
                                   data-bs-target="#forgotPasswordModal">Quên mật khẩu?</a>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg rounded-3">
                                   Đăng nhập
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Quên Mật Khẩu -->
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content rounded-3">
                <div class="modal-body">

                    <div class="text-end">
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <h5 class="text-center fw-bold">QUÊN MẬT KHẨU</h5>

                    <div class="mt-3">
                        <label for="emailFogetPassword" class="fw-semibold">Nhập Email đã đăng ký tài khoản:</label>
                        <input type="text"
                               class="form-control mt-2 border-dark"
                               id="emailFogetPassword"
                               placeholder="example@gmail.com"
                               style="border-radius: 10px; font-size: large;">
                        <span class="text-danger small" id="emailFogetPasswordError"></span>

                        <div class="mt-2 small">Chúng tôi sẽ gửi mã xác nhận đến email của bạn.</div>
                    </div>

                    <div class="mt-3">
                        <button type="button"
                                class="btn text-light w-100"
                                style="background-color: rgb(20,34,56); border-radius: 10px;"
                                data-bs-toggle="modal"
                                data-bs-target="#modalCodeXacNhan">
                            Gửi Yêu Cầu
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Modal Nhập Mã Xác Nhận -->
    <div class="modal fade" id="modalCodeXacNhan" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-3">

                <div class="modal-header border-0">
                    <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body px-4 pb-4">
                    <div class="text-center">

                        <h4 class="fw-bold mb-2">Nhập mã xác nhận</h4>
                        <p class="text-muted small mb-4">Mã xác nhận đã được gửi qua email của bạn.</p>

                        <div class="d-flex justify-content-center gap-2 my-4">
                            <input type="text" maxlength="1" class="otp-input form-control text-center" 
                                   inputmode="numeric" pattern="[0-9]*" autocomplete="off">
                            <input type="text" maxlength="1" class="otp-input form-control text-center" 
                                   inputmode="numeric" pattern="[0-9]*" autocomplete="off">
                            <input type="text" maxlength="1" class="otp-input form-control text-center" 
                                   inputmode="numeric" pattern="[0-9]*" autocomplete="off">
                            <input type="text" maxlength="1" class="otp-input form-control text-center" 
                                   inputmode="numeric" pattern="[0-9]*" autocomplete="off">
                            <input type="text" maxlength="1" class="otp-input form-control text-center" 
                                   inputmode="numeric" pattern="[0-9]*" autocomplete="off">
                            <input type="text" maxlength="1" class="otp-input form-control text-center" 
                                   inputmode="numeric" pattern="[0-9]*" autocomplete="off">
                        </div>

                        <div id="otpError" class="text-danger small mb-3"></div>

                        <button class="btn btn-dark w-75 py-2"
                                style="border-radius: 10px;"
                                data-bs-toggle="modal"
                                data-bs-target="#modalNhapmatkhaumoi">
                            Xác Nhận
                        </button>

                        <div class="mt-3">
                            <a href="#" class="text-decoration-none small text-muted">
                                Không nhận được mã? <span class="text-primary">Gửi lại</span>
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Modal Nhập Mật Khẩu Mới -->
    <div class="modal fade" id="modalNhapmatkhaumoi" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content rounded-3">

                <div class="modal-body">

                    <div class="text-end">
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <h5 class="text-center fw-bold">MẬT KHẨU MỚI</h5>

                    <div class="mt-3">
                        <input type="password"
                               class="form-control border-dark"
                               id="matKhauMoi_QMK"
                               placeholder="Nhập mật khẩu mới"
                               style="border-radius: 10px; font-size: large;">
                        <span class="text-danger small" id="matKhauMoi_QMKError"></span>
                    </div>

                    <div class="mt-3">
                        <input type="password"
                               class="form-control border-dark"
                               id="xacNhanMatKhauMoi_QMK"
                               placeholder="Xác nhận mật khẩu"
                               style="border-radius: 10px; font-size: large;">
                        <span class="text-danger small" id="xacNhanMatKhauMoi_QMKError"></span>
                    </div>

                    <button class="btn w-100 text-light mt-4"
                            style="background-color: rgb(20,34,56); border-radius: 10px;">
                        Xác Nhận
                    </button>

                </div>
            </div>
        </div>
    </div>



    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- ⭐ THÊM CÁC FILE JS RIÊNG ⭐ -->
    <script src="~/assets/js/admin/otp-input.js"></script>
    <script src="~/assets/js/admin/forgot-password.js"></script>
</body>
</html>