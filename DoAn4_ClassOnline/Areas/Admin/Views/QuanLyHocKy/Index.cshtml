<div class="main" id="content">
    <nav class="navbar navbar-expand px-4 py-3">
        <div class="container-fluid">
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav justify-content-between w-100 flex-wrap">
                    <li>
                        <h2 class="fw-bold">Quản lý học kỳ</h2>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="content px-3 py-3">
        <div class="container-fluid">

            <!-- Thanh tìm kiếm & nút thêm học kỳ -->
            <div class="row align-items-center justify-content-between mx-1 mb-4">

                <div class="col-12 col-md-8">
                    <div class="row g-2 align-items-center">

                        <!-- Ô tìm kiếm -->
                        <div class="col-12 col-md-8">
                            <div class="input-group align-items-center border border-dark rounded w-100">
                                <i class="fa-solid fa-magnifying-glass fa-1x ms-2"></i>
                                <input type="text" id="timKiemHocKy" class="form-control input-border border-0"
                                       placeholder="Tìm kiếm học kỳ hoặc năm học">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Nút thêm học kỳ -->
                <div class="col-12 col-md-auto mt-2 mt-md-0">
                    <button type="button" class="btn btn-success w-100 w-md-auto"
                            data-bs-toggle="modal" data-bs-target="#modalThemHocKy">
                        <i class="fa-solid fa-plus"></i> Thêm học kỳ
                    </button>
                </div>

            </div>

            <!-- Bảng danh sách học kỳ -->
            <div class="row mt-2">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table">
                            <thead style="background: #0e2238; color:white;">
                                <tr>
                                    <th scope="col" class="col-1">#</th>
                                    <th scope="col" class="col-2">Học kỳ</th>
                                    <th scope="col" class="col-3">Năm học</th>
                                    <th scope="col" class="col-2">Bắt đầu</th>
                                    <th scope="col" class="col-2">Kết thúc</th>
                                    <th scope="col" class="col-2">Hành động</th>
                                </tr>
                            </thead>
                            <tbody id="tableHocKy">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </main>
</div>

<!-- Modal Thêm Học Kỳ -->
<div class="modal fade" id="modalThemHocKy" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content rounded-4">

            <div class="modal-header d-flex justify-content-center text-center">
                <h5 class="fw-bold">Thêm học kỳ mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body px-4">

                <div class="mb-3">
                    <label class="form-label fw-semibold">Học kỳ <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="hocKy_Them" placeholder="VD: HK1, HK2, HK3">
                    <small class="text-danger" id="errorHocKy_Them"></small>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Năm học <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="namHoc_Them" placeholder="VD: 2024 - 2025">
                    <small class="text-danger" id="errorNamHoc_Them"></small>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Thời gian bắt đầu</label>
                    <input type="text" class="form-control" id="batDau_Them">
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Thời gian kết thúc</label>
                    <input type="text" class="form-control" id="ketThuc_Them">
                </div>

            </div>

            <div class="modal-footer border-0">
                <button type="button" class="btn btn-success px-4" onclick="ThemHocKy()">
                    <i class="fa-solid fa-plus me-1"></i> Thêm
                </button>
            </div>

        </div>
    </div>
</div>

<!-- Modal Sửa Học Kỳ -->
<div class="modal fade" id="modalSuaHocKy" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content rounded-4">

            <div class="modal-header d-flex justify-content-center text-center">
                <h5 class="fw-bold">Cập nhật thông tin học kỳ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body px-4">

                <input type="hidden" id="idHocKy_Sua">

                <div class="mb-3">
                    <label class="form-label fw-semibold">Học kỳ <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="hocKy_Sua">
                    <small class="text-danger" id="errorHocKy_Sua"></small>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Năm học <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="namHoc_Sua">
                    <small class="text-danger" id="errorNamHoc_Sua"></small>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Thời gian bắt đầu</label>
                    <input type="text" class="form-control" id="batDau_Sua">
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Thời gian kết thúc</label>
                    <input type="text" class="form-control" id="ketThuc_Sua">
                </div>

            </div>

            <div class="modal-footer border-0">
                <button type="button" class="btn btn-primary px-4" onclick="CapNhatHocKy()">
                    <i class="fa-solid fa-pen-to-square me-1"></i> Lưu thay đổi
                </button>
            </div>

        </div>
    </div>
</div>

<script src="~/assets/js/Admin/quanly-hocky.js"></script>